    <style>
    .cont {
        padding: 5px;
        border-radius: 4px;
        border: 1px solid pink;
        display: inline-block;
        background: rgb(220, 220, 220);
    }
    .light {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        transition: all .4s ease-in-out;
        display: inline-block;
        margin: 0 2px;
    }
 
    .green {
        background: green;
    }
 
    .yellow {
        background: yellow;
 
    .red {
        background: red;
    }
 
    .off {
        opacity: 0.3;
    }
